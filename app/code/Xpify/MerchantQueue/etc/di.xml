<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Xpify\MerchantQueue\Api\Data\TopicDataInterface" type="Xpify\MerchantQueue\Model\TopicData"/>
    <virtualType name="Shopify_Webhooks_Topics_ShopUpdate" type="Xpify\Webhook\Model\WebhookTopic">
        <arguments>
            <argument name="topic" xsi:type="const">Shopify\Webhooks\Topics::SHOP_UPDATE</argument>
            <argument name="handler" xsi:type="object">Xpify\MerchantQueue\Webhook\ShopUpdate</argument>
            <argument name="includeFields" xsi:type="array">
                <item name="0" xsi:type="string">email</item>
                <item name="1" xsi:type="string">myshopify_domain</item>
                <item name="2" xsi:type="string">name</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Xpify\Webhook\Service\WebhookHandlerRegister">
        <arguments>
            <argument name="webhookTopics" xsi:type="array">
                <item name="shop_update" xsi:type="object">Shopify_Webhooks_Topics_ShopUpdate</item>
            </argument>
        </arguments>
    </type>
</config>
